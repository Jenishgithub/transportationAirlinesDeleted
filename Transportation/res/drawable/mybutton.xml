<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
        android:state_pressed="true">
        <shape 
            android:shape="rectangle">
            <corners 
                android:radius="3dip" />

            <stroke 
                android:width="1dip" 
                android:color="#37474F" />

            <gradient 
                android:angle="-90" 
                android:endColor="#689a92" 
                android:startColor="#004D40" />
        </shape>
        
   	</item>
   	
    <item
        android:state_focused="true">
        <shape 
            android:shape="rectangle">
            <corners 
                android:radius="3dip" />

            <stroke 
                android:width="1dip" 
                android:color="#37474F" />

            <gradient 
                android:angle="-90" 
                android:endColor="#58857e" 
                android:startColor="#8dbab3">
                
            </gradient>
        </shape>
        
        </item>

</selector>