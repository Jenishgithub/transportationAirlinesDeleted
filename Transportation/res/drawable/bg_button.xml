<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <corners 
                android:radius="3dip" />

            <stroke 
                android:width="1dip" 
                android:color="#37474F" />

            <gradient 
                android:angle="-90" 
                android:endColor="#689a92" 
                android:startColor="#004D40" />
        </shape>
         <padding 
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"/>
        
   	</item>
   	
    

    
</selector>
