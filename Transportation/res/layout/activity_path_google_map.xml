<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/pbWait"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/llMap"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <include
            android:id="@+id/top_bar"
            layout="@layout/searchdetail_actionbar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/top_bar"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/llfragment"
                android:layout_width="fill_parent"
                android:layout_height="180dip"
                android:layout_above="@+id/llroutenamecost"
                android:layout_weight="0.5"
                android:orientation="vertical" >

                <fragment
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/llroutenamecost"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_above="@+id/rlscroll"
                android:background="#263238" >

                <TextView
                    android:id="@+id/tvSourceNDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#fff" >
                </TextView>

                <TextView
                    android:id="@+id/tvCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:textColor="#fff" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlscroll"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="0.5" >

                <ListView
                    android:id="@+id/lvfull_route"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>